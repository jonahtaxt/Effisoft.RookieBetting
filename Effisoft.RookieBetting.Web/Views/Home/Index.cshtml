        var getGameWeekResultsUrl = '@string.Format("{0}{1}", baseUrl, "game/gameresults")';
        var getDivisionsUrl = '@string.Format("{0}{1}", baseUrl, "division")';
        var getDivisionStatsUrl = '@string.Format("{0}{1}", baseUrl, "team/divisionstats")';
